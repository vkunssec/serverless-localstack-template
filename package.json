{
  "name": "serverless-localstack-template",
  "version": "1.0.0",
  "description": "Template Serverless para desenvolvimento de aplicações, utilizando LocalStack para reproduzir e testar em um ambiente de Cloud, semelhante à produção.",
  "scripts": {
    "local:build": "npx nodemon --exec npm run local:offline",
    "local:offline": "npx serverless offline --host 0.0.0.0",
    "local:deploy": "npx serverless deploy --stage=local --verbose",
    "local:start": "concurrently \"npm run local:build\"",
    "test": "npx jest --coverage"
  },
  "keywords": [
    "serverless",
    "javascript",
    "localstack",
    "aws",
    "nodejs"
  ],
  "author": "vkunssec",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.8",
    "aws-sdk-mock": "^5.2.1",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^6.2.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "regenerator-runtime": "^0.13.9",
    "serverless": "^2.52.1",
    "serverless-localstack": "^0.4.32",
    "serverless-offline": "^8.0.0",
    "serverless-webpack": "^5.5.1",
    "webpack": "^5.47.1"
  },
  "dependencies": {
    "aws-sdk": "^2.956.0"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__/*"
    ]
  }
}
